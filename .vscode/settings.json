{
	"files.exclude": {
		"**/.*": false,
		"worker/.*": true,
		"worker/node_modules": true,
		"*.json": false,
		"worker/*.json": true,
		"build": false,
		"build-web": false,
		"README.md": false,
		"LICENSE": false,
		"CODEOWNERS": false,
		"vcpkg": false,
		"vcpkg_installed": false
	},
	"editor.tabSize": 2,
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit",
		"eslint.autoFixOnSave": "explicit"
	},
	"files.insertFinalNewline": true,
	"javascript.format.enable": false,
	"typescript.format.enable": false,
	"files.associations": {
		"*.h": "c",
		"*.hpp": "cpp"
	},
	"cSpell.words": [
		"Bezier",
		"CHECKVERSION",
		"cimgui",
		"cloudly",
		"espcord",
		"espdl",
		"espressif",
		"fmodules",
		"fourareen",
		"Framebuffer",
		"Gamepad",
		"GFLW",
		"glfw",
		"gracely",
		"linalg",
		"LOGI",
		"LOGW",
		"mavlink",
		"mipmap",
		"multisample",
		"multisampled",
		"Renderable",
		"specularity",
		"SRCS",
		"statustext",
		"stbi",
		"texcoords",
		"TINYOBJ",
		"tinyusb",
		"Uncaptured",
		"Unconfigure",
		"viewports",
		"webgpu",
		"wgpu",
		"WGSL",
		"Workgroups"
	],
	"clangd.arguments": [
		"--experimental-modules-support"
	],
	"clangd.path": "/usr/bin/clangd",
}
